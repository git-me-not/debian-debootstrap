#setting up preference.d
cat > /etc/apt/preferences.d/init <<HEREDOC
Package: systemd
Pin: release *
Pin-Priority: -1
 
Package: *systemd*
Pin: release *
Pin-Priority: -1
 
Package: systemd:i386
Pin: release *
Pin-Priority: -1
HEREDOC

#installing other init
#openrc
apt-get install --no-install-recommends openrc sysvinit-core elogind libpam-elogind orphan-sysvinit-scripts

#sysvinit
apt-get install --no-install-recommends sysv-rc sysvinit-core elogind libpam-elogind orphan-sysvinit-scripts

#runit
apt-get install --no-install-recommends runit runit-init elogind libpam-elogind orphan-sysvinit-scripts
