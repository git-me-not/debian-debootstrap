#install necessary package
apt install --no-install-recommends zram-tools

#edit zram config
echo -e "ALGO=zstd\nPERCENT=60" | sudo tee -a /etc/default/zramswap

#systemd
service zramswap reload

#openrc/sysvinit

#copy init scripts
cp /etc/init.d/zramswap /etc/init.d/zramswap

#make it executable
chmod +x /etc/init.d/zramswap

#start zram at boot
rc-update add zramswap default
